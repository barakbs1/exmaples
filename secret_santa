import random


def child_list_to_dict(child_list):
    child_dict = {}
    for i in range(0, len(child_list)):
        child_dict[child_list[i]] = ""
    return child_dict


def get_child_list_from_input():
    input_string = input("Enter names: ")
    return input_string.split()


def main():
    children_input = get_child_list_from_input()

    child_names_dict = child_list_to_dict(children_input)
    grouping_dict = {}

    for child in list(child_names_dict.keys()):
        if child not in child_names_dict.keys():
            continue
        child_picked = random.choice(list(child_names_dict.keys()))
        if len(child_names_dict) > 1:
            while child_picked == child:
                child_picked = random.choice(list(child_names_dict.keys()))
            grouping_dict[child] = child_picked
            del child_names_dict[child]
            del child_names_dict[child_picked]

    for child1, child2 in grouping_dict.items():
        print(f"The pair of {child1} is {child2}")

    if len(child_names_dict.keys()) > 0:
        for child_name in child_names_dict.keys():
            print(f"Sadly, {child_name} has no pair :-(")


if __name__ == '__main__':
    main()
